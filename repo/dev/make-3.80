
version=3.80
description="GNU Make"
depends=()
website="http://www.gnu.org/software/automake"
license=('GPL')

isinstalled() {
	make -version | grep -q "$version" &> /dev/null
}

iscompat() {
	return 0
}

build() {
	fetch_extract "ftp://ftp.gnu.org/gnu/make/make-${version}.tar.bz2" \
		"a99b39e7b04c333724f48c38fede709481cfb69fafe7e32ae4285b7fadf92f1b"

	cd "make-${version}"

	LDFLAGS="-Wl,-rpath=$LD_RUN_PATH" ./configure --prefix="$1"
	
	make
}

installenv() {
	cd "make-${version}"
	make DESTDIR="$2" install
}

