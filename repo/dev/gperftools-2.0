
version=2.0
description="Gperftools"
depends=()
website="http://code.google.com/p/gperftools"
license=('BSD')

isinstalled() {
	pprof --version | grep -q "gperftools $version"
}

iscompat() {
	return 0
}

build() {
	fetch_extract \
		"http://gperftools.googlecode.com/files/gperftools-$version.tar.gz" \
		"7de3dd91f018825b1e7d332af1edace15c6211f430186febede1835069861080"

	cd "gperftools-${version}"

	# glibc 2.16 fix
	ldd --version | grep -q '(GNU libc) 2.16$' && sed -i 's:siginfo_t:siginfo:' src/base/linuxthreads.cc

	LDFLAGS="-Wl,-rpath=$LD_RUN_PATH" ./configure --prefix="$1" --enable-frame-pointers

	make
}

installenv() {
	cd "gperftools-${version}"
	make DESTDIR="$2" install
}

