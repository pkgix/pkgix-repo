
version=4.4.7
description="The GCC compiler version $version"
depends=()

isinstalled() {
	gcc --version | grep -q "$version" &> /dev/null
}

iscompat() {
	return 0
}

build() {
	fetch_extract "http://www.mirrorservice.org/sites/sourceware.org/pub/gcc/releases/gcc-${version}/gcc-${version}.tar.bz2" \
		"5ff75116b8f763fa0fb5621af80fc6fb3ea0f1b1a57520874982f03f26cd607f"

	cd "gcc-${version}"

	./configure \
		--prefix="$1" \
		--mandir="$1/share/man" \
		--infodir="$1/share/info" \
		--libdir="$1/lib" \
		--libexecdir="$1/lib" \
		--enable-shared \
		--enable-languages=c,c++,fortran,objc,obj-c++ \
		--enable-__cxa_atexit \
		--disable-libstdcxx-pch \
		--disable-multilib \
		--disable-libgomp \
		--disable-libmudflap \
		--disable-libssp \
		--enable-clocale=gnu \
		--with-tune=generic \
		--with-cloog \
		--with-ppl \
		--with-system-zlib

	make
}

installenv() {
	make DESTDIR="$2" install
}

