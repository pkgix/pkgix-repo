
metapkg=dev/gmp-5.0.5
version=5.0.5
description="Metapackage for GMP"

satisfied() {
	local headerpath
	local old_IFS="$IFS"
	IFS=":"

	# Check all the common paths
	for path in ${CPATH[@]} /include /usr/include; do
		if [[ -f "$path/gmp.h" ]]; then
			headerpath="$path/gmp.h"
			break
		fi
	done
	IFS="$old_IFS"

	[[ -n "$headerpath" ]]
}

# vim: set ft=sh :
