
version=3.1.1
description="MPFR"
depends=('dev/gmp-5')
website="http://www.mpfr.org"
license=('LGPL')

isinstalled() {
	local headerpath
	local old_IFS="$IFS"
	IFS=":"

	# Check all the common paths
	for path in ${CPATH[@]} /include /usr/include; do
		if [[ -f "$path/mpfr.h" ]]; then
			headerpath="$path/mpfr.h"
			break
		fi
	done
	IFS="$old_IFS"

	if [[ -z "$headerpath" ]]; then
		return 1
	else
		grep -q "MPFR_VERSION_STRING \"${version}\"$" "$headerpath"
	fi
}

iscompat() {
	return 0
}

build() {
	fetch_extract \
		"http://www.mpfr.org/mpfr-current/mpfr-${version}.tar.xz" \
		"49d5acc32dbeec30a8e26af9c19845763d63feacb8bf97b12876008419f5a17a"

	cd "mpfr-${version}"

	fetch \
		"$repo_url/../support/patches/dev/mpfr-3.1.1-allpatches.patch" \
		"1aeefe799d29bafde1ab6c889a8a0adb6597fec6bc10be761dc4e366bcecbec5"

	patch -Np1 -i mpfr-3.1.1-allpatches.patch

	LDFLAGS="-Wl,-rpath=$LD_RUN_PATH" ./configure --prefix="$1" --enable-thread-safe --enable-shared
	make
}

installenv() {
	cd "mpfr-${version}"
	make DESTDIR="$2" install
}

