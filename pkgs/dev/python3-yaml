
version=3.10
description="PyYAML"
website="http://pyyaml.org"
license=('MIT')
depends=('dev/python3')

isinstalled() {
	python3 -c 'import yaml' &>/dev/null
}

iscompat() { return 0; }

build() {
	fetch_extract \
		"http://pypi.python.org/packages/source/P/PyYAML/PyYAML-${version}.tar.gz" \
		"e713da45c96ca53a3a8b48140d4120374db622df16ab71759c9ceb5b8d46fe7c"
}

installenv() {
	cd "PyYAML-${version}"
	python3 setup.py install --prefix="${prefix}/usr" --root="${destdir}" --optimize=1
}

