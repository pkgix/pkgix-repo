
version=0.1.3
description="Ordered set"
website="https://pypi.python.org/pypi/oset/"
license=('MIT')
depends=('dev/python3')

isinstalled() {
	python3 -c 'import oset' &>/dev/null
}

iscompat() { return 0; }

build() {
	fetch_extract \
		"http://pypi.python.org/packages/source/o/oset/oset-${version}.tar.gz" \
		"4c1fd7dec96eeff9d3260995a8e37f9f415d0bdb79975f57824e68716ac8f904"
}

installenv() {
	cd "oset-${version}"
	python3 setup.py install --prefix="${prefix}/usr" --root="${destdir}" --optimize=1
}

# vim: set ft=sh :
