
source_pkg ".functions/build" "${repo}"

version=5.4.1
description="Poly/ML: Standard ML (SML) implementation"
depends=('dev/gmp')
website="http://www.polyml.org"
license=('GPL2')

isinstalled() {
	return 1
}

iscompat() {
	return 0
}

build() {
	fetch_extract \
		"http://downloads.sourceforge.net/project/polyml/polyml/${version}/polyml.${version}.tar.gz" \
		"514d1d07be487b783d4dfa29dbd550b3396640579ce135a9eb5a61f08e7f9cac"

	cd "polyml.${version}"

	build_wrap_ldflags ./configure \
		--prefix="${prefix}/usr"

	make
}

installenv() {
	cd "polyml.${version}"
	make DESTDIR="${destdir}" install
}

