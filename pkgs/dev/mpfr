
metapkg=dev/mpfr-3.1.1
version=3.1.1
description="Metapackage for MPFR"

satisfied() {
	local headerpath
	local old_IFS="$IFS"
	IFS=":"

	# Check all the common paths
	for path in ${CPATH[@]} /include /usr/include; do
		if [[ -f "$path/mpfr.h" ]]; then
			headerpath="$path/mpfr.h"
			break
		fi
	done
	IFS="$old_IFS"

	[[ -n "$headerpath" ]]
}

# vim: set ft=sh :
