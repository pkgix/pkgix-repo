
version=1.10
description="GNU dbm"
depends=()
website="http://www.gnu.org/software/gdbm/gdbm.html"
license=('GPL')

isinstalled() {
	local gdbmpath
	local old_IFS="$IFS"
	IFS=":"

	# Check all the common paths
	for path in ${CPATH[@]} /include /usr/include; do
		if [[ -f "$path/gdbm.h" ]]; then
			gdbmpath="$path/gdbm.h"
			break
		fi
	done
	IFS="$old_IFS"

	if [[ -z "$gdbmpath" ]]; then
		return 1
	else
		grep -q 'GDBM_VERSION_MAJOR 1$' "$gdbmpath" &&
			grep -q 'GDBM_VERSION_MINOR 10$' "$gdbmpath" &&
			grep -q 'GDBM_VERSION_PATCH 0$' "$gdbmpath"
	fi
}

iscompat() {
	return 0
}

build() {
	fetch_extract "ftp://ftp.gnu.org/gnu/gdbm/gdbm-${version}.tar.gz" \
		"23f8134c5b94bbfb06d756a6b78f074fba6e6028cf2fe01341d40b26db773441"

	cd "gdbm-${version}"

	LDFLAGS="-Wl,-rpath=$LD_RUN_PATH" ./configure --prefix="${prefix}"
	make
}

installenv() {
	cd "gdbm-${version}"
	make DESTDIR="${destdir}" install
}

