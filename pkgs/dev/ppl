
metapkg=dev/ppl-1.0
version=1.0
description="Metapackage for PPL"

satisfied() {
	local headerpath
	local old_IFS="$IFS"
	IFS=":"

	# Check all the common paths
	for path in ${CPATH[@]} /include /usr/include; do
		if [[ -f "$path/ppl.hh" ]]; then
			headerpath="$path/ppl.hh"
			break
		fi
	done
	IFS="$old_IFS"

	[[ -n "$headerpath" ]]
}

# vim: set ft=sh :
