
version=20131117
description="Pybtex"
website="http://pybtex.sourceforge.net"
license=('GPL')
depends=('dev/python3' 'dev/python3-yaml')

isinstalled() {
	python3 -c 'import pybtex' &>/dev/null
}

iscompat() { return 0; }

build() {
	wget "http://bazaar.launchpad.net/~pybtex-devs/pybtex/trunk/tarball/892?start_revid=892" -O "pybtex.tar.gz"
	extract_archive "pybtex.tar.gz"
}

installenv() {
	cd "~pybtex"*"/pybtex/trunk"
	python3 setup.py install --prefix="${prefix}/usr" --root="${destdir}" --optimize=1
}

# vim: set ft=sh :
