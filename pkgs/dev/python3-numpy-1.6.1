
version=1.6.1
description="Numpy Python library"
depends=("dev/python3")
website="http://numpy.scipy.org"
license=('BSD-new')

isinstalled() {
	return 1
}

iscompat() {
	return 0
}

build() {
	fetch_extract \
		"http://downloads.sourceforge.net/numpy/numpy-${version}.tar.gz" \
		"788b1bc712ee566d4b4d62ef99736c5830fa264cbc56f8651ded1e795c755cdd"

	cd "numpy-${version}"

	Atlas=None LDFLAGS="-Wl,-rpath=$LD_RUN_PATH -shared" python3 setup.py config_fc --fcompiler=gnu95 build
}

installenv() {
	cd "numpy-${version}"
	python3 setup.py config_fc --fcompiler=gnu95 install --prefix="${prefix}" --root="${destdir}" --optimize=1
}

