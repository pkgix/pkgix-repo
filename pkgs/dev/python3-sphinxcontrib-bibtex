
version=0.2.9
description="A Sphinx extension for BibTeX style citations"
website="http://sphinxcontrib-bibtex.readthedocs.org/"
license=('BSD')
depends=('dev/python3' 'dev/python3-pybtex' 'dev/python3-oset' 'dev/python3-latexcodec' 'dev/python3-pybtex-docutils')

isinstalled() {
	python3 -c 'import sphinxcontrib.bibtex' &>/dev/null
}

iscompat() { return 0; }

build() {
	fetch_extract \
		"http://pypi.python.org/packages/source/s/sphinxcontrib-bibtex/sphinxcontrib-bibtex-${version}.zip" \
		"638327dcbba238ac75f78c37d941dceab013042ebdb3f4d0ad9fae3818b61ed5"
}

installenv() {
	cd "sphinxcontrib-bibtex-${version}"
	python3 setup.py install --prefix="${prefix}/usr" --root="${destdir}" --optimize=1
}

# vim: set ft=sh :
